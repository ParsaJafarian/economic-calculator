<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.compound_calculator.Controller">
  <children>
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER" />
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="706.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
      <children>

            <VBox fx:id="graphContainer" layoutX="550.0" layoutY="14.0" prefHeight="459.0" prefWidth="736.0" />
            <VBox layoutX="54.0" layoutY="392.0" prefHeight="382.0" prefWidth="450.0">
               <children>
                  <Pagination fx:id="pagination" prefHeight="133.0" prefWidth="277.0" />
      
                   <TableView id="tableView" fx:id="tableView" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="318.0" prefWidth="450.0">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <GridPane fx:id="resultsSection" layoutX="601.0" layoutY="491.0" prefHeight="143.0" prefWidth="585.0" visible="false">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="190.0" minWidth="10.0" prefWidth="126.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.0" minWidth="10.0" prefWidth="125.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="86.0" minHeight="10.0" prefHeight="54.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="71.0" minHeight="10.0" prefHeight="54.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="18.0" prefWidth="180.0" text="Total value of your investment: " />
                  <Label text="Total interest earned:" GridPane.rowIndex="1" />
                  <Label fx:id="totCapitalLabel" GridPane.columnIndex="1" />
                  <Label fx:id="totInterestLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <VBox fx:id="formContainer" layoutX="25.0" layoutY="36.0" prefHeight="291.0" prefWidth="483.0">
               <children>
                  <HBox prefHeight="46.0" prefWidth="450.0">
                      <children>
                          <ToggleButton fx:id="compoundTglBtn" prefHeight="59.0" prefWidth="150.0" text="Compound Interest" />
                          <ToggleButton fx:id="presentValueTglBtn" prefHeight="107.0" prefWidth="150.0" selected="true" text="Present Value" />
                          <ToggleButton fx:id="inflationTglBtn" prefHeight="59.0" prefWidth="150.0" text="Inflation" />
                      </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" layoutX="73.0" layoutY="327.0" prefHeight="46.0" prefWidth="388.0">
               <children>
                  <Button fx:id="clrBtn" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Clear" textAlignment="CENTER" />
                  <Button fx:id="calcBtn" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Calculate" textAlignment="CENTER" />
               </children>
            </HBox>
      </children>
    </AnchorPane>
  </children>
</VBox>
